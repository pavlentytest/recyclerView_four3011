<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="120dp">
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/pizzaName" android:textSize="24sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/pizzaPrice" android:textStyle="bold"
                android:textColor="#009688"/>
    </LinearLayout>


</LinearLayout>